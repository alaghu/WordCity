<h1>Listing words</h1>

<table>
  <thead>
    <tr>
      <th>Row</th>

      <th>Word</th>
      <th>Meaning</th>
      <th>Part of speach</th>
      <th>Sample Sentence</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each_with_index do |word, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= word.word %></td>

        <% meaning = Wordnik.word.get_definitions(word.word.strip.downcase, source_dictionaries: "wiktionary") %>

        <% tagger = EngTagger.new %>

        <% if meaning.blank? %>
            <td> No Value from wordnik </td>
        <% else %>
            <td> <%= tagger.add_tags(meaning.first["text"]) %>  </td>
        <% end %>

        <td> <%= meaning.class %>  </td>

        <!--<td><%= word.meaning %></td>-->
        <td><%= word.part_of_speach %></td>
        <td><%= word.sample_sentence %></td>





        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
    <% end %>
        </tbody>
        </table>

<br>


